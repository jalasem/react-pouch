{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": ["node", "jest", "@types/react", "@types/react-dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "results.json"
  ]
}